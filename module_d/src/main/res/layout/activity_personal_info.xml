<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View style="@style/line_horizontal" />

    <com.mythmayor.basicproject.ui.view.InputBox
        android:id="@+id/inputbox_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:inputbox_etcontentHint="请输入用户名"
        app:inputbox_tvtitleText="用户名"
        app:inputbox_type="1" />

    <View style="@style/line_horizontal" />

    <com.mythmayor.basicproject.ui.view.InputBox
        android:id="@+id/inputbox_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:inputbox_tvtitleText="性别"
        app:inputbox_type="1" />

    <View style="@style/line_horizontal" />

    <com.mythmayor.basicproject.ui.view.InputBox
        android:id="@+id/inputbox_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:inputbox_etcontentHint="请输入年龄"
        app:inputbox_tvtitleText="年龄"
        app:inputbox_type="1" />

    <View style="@style/line_horizontal" />

    <com.mythmayor.basicproject.ui.view.InputBox
        android:id="@+id/inputbox_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:inputbox_etcontentHint="请输入手机号"
        app:inputbox_tvtitleText="手机号"
        app:inputbox_type="1" />

    <View style="@style/line_horizontal" />

    <TextView
        android:id="@+id/tv_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_btn_update"
        android:gravity="center"
        android:padding="7dp"
        android:text="编辑"
        android:textColor="@color/color_white"
        android:textSize="18sp" />
</LinearLayout>