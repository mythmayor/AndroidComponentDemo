<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <View
        android:id="@+id/view_blank"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_D8D8D8"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_personalinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/ic_launcher_vector_round" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="@color/color_0067FF"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@mipmap/arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/color_white"
            android:orientation="vertical">

            <com.mythmayor.basicproject.ui.view.NavigationItemView
                android:id="@+id/niv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:niv_arrowImage="@mipmap/arrow_right"
                app:niv_drawableRight="@drawable/bg_notification_tips"
                app:niv_icon="@mipmap/icon_main_tab_selected"
                app:niv_title="消息通知" />

            <View
                style="@style/line_horizontal"
                android:layout_marginLeft="20dp" />

            <com.mythmayor.basicproject.ui.view.NavigationItemView
                android:id="@+id/niv_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:niv_arrowImage="@mipmap/arrow_right"
                app:niv_icon="@mipmap/icon_main_tab_selected"
                app:niv_title="意见反馈" />

            <View
                style="@style/line_horizontal"
                android:layout_marginLeft="20dp" />

            <com.mythmayor.basicproject.ui.view.NavigationItemView
                android:id="@+id/niv_modifypwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:niv_arrowImage="@mipmap/arrow_right"
                app:niv_icon="@mipmap/icon_main_tab_selected"
                app:niv_title="修改密码" />

            <View
                style="@style/line_horizontal"
                android:layout_marginLeft="20dp" />

            <com.mythmayor.basicproject.ui.view.NavigationItemView
                android:id="@+id/niv_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:niv_arrowImage="@mipmap/arrow_right"
                app:niv_drawableRight="@drawable/bg_notification_tips"
                app:niv_icon="@mipmap/icon_main_tab_selected"
                app:niv_title="设置" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>