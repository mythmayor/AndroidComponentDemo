<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--原型ImageView样式-->
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <!--导航条样式-->
    <declare-styleable name="NavigationItemView">
        <attr name="niv_icon" format="reference|color" />
        <attr name="niv_title" format="string" />
        <attr name="niv_content" format="string" />
        <attr name="niv_drawableLeft" format="reference|color" />
        <attr name="niv_drawableRight" format="reference|color" />
        <attr name="niv_drawablePadding" format="dimension" />
        <attr name="niv_arrowImage" format="reference|color" />
    </declare-styleable>

    <!--搜索框样式-->
    <declare-styleable name="SearchBar">
        <attr name="search_isAllowInput" format="boolean" />
        <attr name="search_showTvcancel" format="boolean" />
        <attr name="search_bg" format="reference|color" />
        <attr name="search_tvcancelTextColor" format="reference|color" />
        <attr name="search_ivsearchSrc" format="reference|color" />
        <attr name="search_ivclearSrc" format="reference|color" />
        <attr name="search_hint" format="string" />
    </declare-styleable>

    <!--输入框样式-->
    <declare-styleable name="InputBox">
        <attr name="inputbox_type" format="integer" /><!--1是展示框，2是输入框-->
        <attr name="inputbox_tvtitleText" format="string" />
        <attr name="inputbox_tvtitleTextColor" format="reference|color" />
        <attr name="inputbox_tvtitleTextSize" format="dimension" />
        <attr name="inputbox_tvcontentText" format="string" />
        <attr name="inputbox_tvcontentHint" format="string" />
        <attr name="inputbox_tvcontentTextColor" format="reference|color" />
        <attr name="inputbox_tvcontentTextSize" format="dimension" />
        <attr name="inputbox_tvcontentDrawableRight" format="reference|color" />
        <attr name="inputbox_etcontentInputType">
            <flag name="none" value="0x00000000" />
            <flag name="text" value="0x00000001" />
            <flag name="textCapCharacters" value="0x00001001" />
            <flag name="textCapWords" value="0x00002001" />
            <flag name="textCapSentences" value="0x00004001" />
            <flag name="textAutoCorrect" value="0x00008001" />
            <flag name="textAutoComplete" value="0x00010001" />
            <flag name="textMultiLine" value="0x00020001" />
            <flag name="textImeMultiLine" value="0x00040001" />
            <flag name="textNoSuggestions" value="0x00080001" />
            <flag name="textUri" value="0x00000011" />
            <flag name="textEmailAddress" value="0x00000021" />
            <flag name="textEmailSubject" value="0x00000031" />
            <flag name="textShortMessage" value="0x00000041" />
            <flag name="textLongMessage" value="0x00000051" />
            <flag name="textPersonName" value="0x00000061" />
            <flag name="textPostalAddress" value="0x00000071" />
            <flag name="textPassword" value="0x00000081" />
            <flag name="textVisiblePassword" value="0x00000091" />
            <flag name="textWebEditText" value="0x000000a1" />
            <flag name="textFilter" value="0x000000b1" />
            <flag name="textPhonetic" value="0x000000c1" />
            <flag name="textWebEmailAddress" value="0x000000d1" />
            <flag name="textWebPassword" value="0x000000e1" />
            <flag name="number" value="0x00000002" />
            <flag name="numberSigned" value="0x00001002" />
            <flag name="numberDecimal" value="0x00002002" />
            <flag name="numberPassword" value="0x00000012" />
            <flag name="phone" value="0x00000003" />
            <flag name="datetime" value="0x00000004" />
            <flag name="date" value="0x00000014" />
            <flag name="time" value="0x00000024" />
        </attr>

        <attr name="inputbox_etcontentText" format="string" />
        <attr name="inputbox_etcontentHint" format="string" />
        <attr name="inputbox_etcontentTextColor" format="reference|color" />
        <attr name="inputbox_etcontentTextSize" format="dimension" />
    </declare-styleable>

    <!--菊花图 自定义属性-->
    <declare-styleable name="ChrysanthemumView">
        <!--线条个数-->
        <attr name="lineCount" format="integer" />
        <!--菊花开始颜色-->
        <attr name="startColor" format="reference|color" />
        <!--菊花结束颜色-->
        <attr name="endColor" format="reference|color" />
    </declare-styleable>
</resources>